procedure TestTConverteTexto.SetUp;
begin
  FConverteTexto := TConverteTexto.Create;
end;

procedure TestTConverteTexto.TearDown;
begin
  FreeAndNil(FConverteTexto);
end;

procedure TestTConverteTexto.TestAdicionarTexto;
const a = 'Abc abc';
var
  ReturnValue: IConversao;
  Value: string;
begin
  ReturnValue := FConverteTexto.AdicionarTexto(a);
  CheckEquals(a, FConverteTexto.Texto, 'A propriedade recebeu o valor correto');
end;

